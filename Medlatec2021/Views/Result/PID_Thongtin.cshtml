                <div class="customer-info">
                    <div class="customer-info-row">
                        <div class="customer-info-col customer-info-left">
                            <div class="customer-info--img"><img src="/Content/images/person-white.png" alt="" /></div>
                        </div>
                        <div class="customer-info-col customer-info-right">
                            <div class="customer-info--wrapper">
                                <div class="customer-info--code">B290053602</div>
                                <div class="customer-info--name">Phạm Thị Mến</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="customer-menu">
                    <ul>
                        <li class="customer-ttcn customer-menu--active">
                            <a href="#">Thông tin cá nhân</a>
                        </li>
                        <li class="customer-lsk">
                            <a href="#">Lịch sử khám</a>
                        </li>
                        <li class="customer-qdtkh">
                            <a href="#">Quy định thẻ KH (PID)</a>
                        </li>
                        <li class="customer-lsgd">
                            <a href="#">Lịch sử giao dịch</a>
                        </li>
                        <li class="customer-ctudkh">
                            <a href="#">Chương trình ưu đãi dành cho KH</a>
