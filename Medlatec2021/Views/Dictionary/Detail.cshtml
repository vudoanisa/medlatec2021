<script src="~/Content/js/jquery.sticky.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        stick('.fix-pd-head', 'fixed-fix-pd-head', 0, '', '');
        function stick(id, el_class, offset_top, stick, unstick) {
            if ($(id).length > 0) {
                $(id).sticky({
                    sticky_class: el_class,
                    offset_top: offset_top
                }).on("sticky_kit:stick", function (e) {
                    $(stick).hide();
                }).on("sticky_kit:unstick", function (e) {
                    $(unstick).show();
                });
            }
        };

    });
    function show_content(id) {
        $('.content-show').slideUp();
        $('#' + id).find('.content-show').slideDown();
        var elmnt = document.getElementById(id);
        elmnt.scrollIntoView();
    }
</script>


