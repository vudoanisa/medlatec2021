@using MEDLATEC.BusinessLayer;
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var TinNoiBat = (List<Cms_News>)ViewBag.TinNoiBat;
    var NewsCate = (List<Cms_News>)ViewBag.NewsCate;
}

@section Note {
    <title>Nội - Thần kinh | Bệnh viện đa khoa Medlatec</title>

    <meta name="description" content="Chuyên khoa Nội - Thần kinh thuộc bệnh viện đa khoa medlatec, Chuyên khoa Nội - Thần kinh. Medlatec Quy tụ nhiều bác sĩ đầu ngành về lĩnh vực Nội - Thần kinh ở trong và ngoài nước" />
