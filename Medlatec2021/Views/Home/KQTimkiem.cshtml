@using MEDLATEC.BusinessLayer;
@using System.Data;
@using CaptchaMvc.HtmlHelpers;
@using CMS_Core.Common;
@{

    Layout = "~/Views/Shared/_Layout.cshtml";

    var TopCauHoi = (List<Question>)ViewBag.TopCauHoi;
    var QuestionCate = (List<Question>)ViewBag.QuestionCate;


    var TinNoiBat = (List<Cms_News>)ViewBag.TinNoiBat;
    var NewsCate = (List<Cms_News>)ViewBag.NewsCate;

}

@using (Html.BeginForm("KQTimkiem", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
{

    <div class="breadcrumb-container container">
        <ul class="clearfix">
            <li><a href="https://medlatec.vn/">Trang chủ</a></li>

            <li>
                Kết quả tìm kiếm : <h1 style="display:initial;border-bottom:none;font-size:16px;color:#1576C4;">@Server.HtmlDecode(ViewBag.Tukhoa)</h1>

            </li>

        </ul>
    </div>
    if (NewsCate != null)
    {
        if (NewsCate.Count > 0)
        {
            <div class="archive-news container">
                <div class="archive-news--row row">
                    <div class="archive-news--col col-xl-9 col-lg-8 col-md-7">
                        

                        <div class="archive-news--container">
                            <h2 style="font-size:18px;color:#1576C4;">Những tin tức chứa từ khóa :@ViewBag.Tukhoa </h2>
                            <div class="archive-news--list">

                                @for (int i = 0; i < NewsCate.Count; i++)
                                {


                                    <div class="archive-news--item">
                                        <div class="archive-item--row row">
                                            <div class="archive-item-col col-lg-4">
                                                <div class="archive-item--img">
                                                    @if (NewsCate[i].NewsImages != null)
                                                    {
                                                        <a href="/@CMS_Core.Common.Common.GetURLDetailByNews("tin-tuc", NewsCate[i].NewsName.ToString().ToLower(), "s" + NewsCate[i].CateId.ToString(), "n" + NewsCate[i].NewsId.ToString())" title="@NewsCate[i].NewsName.ToString()"><img src="@NewsCate[i].NewsImages.ToString()" alt="@NewsCate[i].NewsName.ToString().TrimStart().TrimEnd()" /></a>
                                                    }

                                                </div>
                                            </div>
                                            <div class="archive-item-col col-lg-8">
                                                <div class="archive-item--content">
                                                    @if (@NewsCate[i].NewsName != null)
                                                    {
                                                        <h3><a href="/@CMS_Core.Common.Common.GetURLDetailByNews("tin-tuc", NewsCate[i].NewsName.ToString().ToLower(), "s" + NewsCate[i].CateId.ToString(), "n" + NewsCate[i].NewsId.ToString())" title="@NewsCate[i].NewsName.ToString()">@NewsCate[i].NewsName.ToString().TrimStart().TrimEnd()</a></h3>
                                                    }

                                                    <div class="archive-item--info clearfix">
                                                        @if (@NewsCate[i].DateCreate != null)
                                                        {
                                                            <span class="archive-item--date">Ngày @NewsCate[i].DateCreate.ToString("dd/MM/yyyy")</span>
                                                        }


                                                    </div>
                                                    @if (@NewsCate[i].NewsDescription != null)
                                                    {
                                                        <div class="archive-item--desc d-none d-xl-block">@NewsCate[i].NewsDescription.ToString()</div>
                                                    }

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }


                            </div>




                        </div>
                        <div class="clearfix">

                        </div>
                        @*<div class="faq-archive--wrapper" style="padding-top:10px;">
