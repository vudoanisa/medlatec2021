@using MEDLATEC.BusinessLayer;
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var TinNoiBat = (List<Cms_News>)ViewBag.TinNoiBat;
    var NewsCate = (List<Cms_News>)ViewBag.NewsCate;
}

@section Note {
    <title>Cơ xương khớp | Bệnh viện đa khoa Medlatec</title>

    <meta name="description" content="Chuyên khoa Cơ xương khớp thuộc bệnh viện đa khoa medlatec, Chuyên khoa Cơ xương khớp. Medlatec Quy tụ nhiều bác sĩ đầu ngành về lĩnh vực Cơ xương khớp ở trong và ngoài nước" />
    <meta property="og:description" content="Chuyên khoa Cơ xương khớp thuộc bệnh viện đa khoa medlatec, Chuyên khoa Cơ xương khớp. Medlatec Quy tụ nhiều bác sĩ đầu ngành về lĩnh vực Cơ xương khớp ở trong và ngoài nước" />
    <meta name="title" content="Chuyên khoa Cơ xương khớp | Bệnh viện đa khoa Medlatec" />
    <meta property="og:title" content="Chuyên khoa Cơ xương khớp | Bệnh viện đa khoa Medlatec" />
    <meta name="keywords" content="Chuyên khoa Cơ xương khớp" />







    <meta property="og:image" content="https://medlatec.vn/Content/images/Chuyen-khoa/anh-chinh-co-xuong-khop.jpg" />


    <meta property="og:type" content="article" />
    <meta property="fb:app_id" content="2092985977431269" />
    <meta property="og:url" content="https://medlatec.vn/chuyen-khoa/co-xuong-khop" />



    <meta name="robots" content="index,follow,all">
