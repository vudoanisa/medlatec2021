@using MEDLATEC.BusinessLayer;
@using System.Data;
@using CaptchaMvc.HtmlHelpers;
@using CMS_Core.Common;
@model  MEDLATEC2019.Models.MPTXViewModel

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var Price = (List<Cms_Price>)ViewBag.Price;
    var page = (int)ViewBag.page;
    var News = (List<Cms_News>)ViewBag.News;
    var Total = (List<Cms_Price>)ViewBag.Total;




}

<link href="/Content/css/bootstrap-select.css" rel="stylesheet" />
<link rel="stylesheet" href="/Content/css/select2.css" />


<script src="/Content/js/jquery-3.3.1.min.js"></script>
<script src="/Content/js/bootstrap.min.js"></script>





<script>
    $(document).ready(function () {
        $('.select2').select2()
    });


</script>

<script src="/Content/js/bootstrap-select.js"></script>


@using (Html.BeginForm("Home", "Price", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @section Note {


        @{
            string pageview = "";
            string urlpage = "";


            if (page == 1)
            {

            }
            else
            {
                pageview = " | Trang " + page.ToString();
                urlpage = "/" + page.ToString();
            }
        }


        <title>Bảng giá dịch vụ y tế mới nhất năm 2019 | Bệnh viện đa khoa MEDLATEC @pageview</title>



        <meta name="description" content="@Html.Raw("Bảng giá dịch vụ y tế năm 2019 tại Meldatec là thông tin chi tiết về giá khám các dịch vụ tại Bệnh viện đa khoa Medlatec để Quý khách hàng có thể tham khảo. Với tiêu chí lấy khách hàng là trung tâm, Medlatec luôn mong muốn mang đến cho người dân Việt Nam một địa chỉ chăm sóc sức khỏe uy tín, với mức giá hợp lý."+ pageview)" />


        <meta name="title" content="Bảng giá dịch vụ y tế mới nhất năm 2019 | Bệnh viện đa khoa MEDLATEC @pageview" />


        <meta name="keywords" content="@Html.Raw("Bảng giá dịch vụ y tế năm 2019 tại Meldatec là thông tin chi tiết về giá khám các dịch vụ tại Bệnh viện đa khoa Medlatec để Quý khách hàng có thể tham khảo. Với tiêu chí lấy khách hàng là trung tâm, Medlatec luôn mong muốn mang đến cho người dân Việt Nam một địa chỉ chăm sóc sức khỏe uy tín, với mức giá hợp lý."+ pageview)" />



        <meta name="robots" content="index,follow,all">
        <link rel="canonical" href="@Html.Raw("https://medlatec.vn/bang-gia-dich-vu"+urlpage)" />
    }


    @Html.Raw(TempData["msg"])

    if (Price != null)
    {
        <div class="breadcrumb-container container">
            <ul class="clearfix">
                <li><a href="https://medlatec.vn">Trang chủ</a></li>
                <li><span>Bảng giá dịch vụ y tế</span></li>
            </ul>
        </div>

        <div class="price-service container">
            <h1>Bảng giá dịch vụ</h1>
            <div class="price-service--note">Quý khách gọi hotline 1900 565656 để biết thêm chi tiết</div>


            <form class="service-search">
                <div class="service-search--row row">
                    <div class="service-search--col col-md-12">
                        <div class="service-search--wrapper clearfix">
                            @Html.DropDownListFor(m => m.Dichvu, this.ViewBag.GetDichvu as List<SelectListItem>, new { @class = "form-control select2", style = "height: 42px; float: left;border: none;width: -webkit-calc(100% - 90px); width: -moz - calc(100 % -90px); width: calc(100 % -90px);background: 0 0;  padding: 8px 8px 9px; line - height: 22px;  font - size: 16px;  " })


                            @*<input type="text" name="txttimkiem" placeholder="Tra cứu dịch vụ" />*@
                            <button type="submit" name="submit" value="SaveAdd" class="btn-form--submit">Tra cứu</button>
                        </div>
                    </div>
                    <div class="service-search--col col-md-5">

                    </div>
                </div>
            </form>


            <div class="archive-news container">
                <div class="archive-news--row row">
                    <div class="service-table col-xl-9 col-lg-8 col-md-7" style="max-height:none;">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">STT</th>
                                    <th scope="col">Tên dịch vụ</th>
                                    <th scope="col">Giá dịch vụ<br />VNĐ</th>
                                    <th scope="col">Giá BHYT<br />VNĐ</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Price.Count > 0)
                                {
                                    for (int i = 0; i < Price.Count; i++)
                                    {
                                        <tr>
                                            <th scope="row">@(i + 1)</th>
                                            <td>@Price[i].TenCP1.ToString()</td>
                                            <td>@String.Format("{0:0,0}", float.Parse(Price[i].DG1.ToString()))</td>
                                            <td style="color: #333;font-weight: 400;">@String.Format("{0:0,0}", float.Parse(Price[i].DGBH.ToString()))</td>

                                        </tr>
                                    }
                                }


                            </tbody>
                        </table>
                    </div>

                    <div class="col-xl-3 col-lg-4 col-md-5" style="margin-top:30px;">
                        <div class="sidebar-container">
                            <div class="news-post">
                                <h2>Tin mới nhất</h2>
                                <div class="news-post--list">

                                    @for (int i = 0; i < 4; i++)
                                    {



                                        <div class="news-post--item">
                                            <div class="news-post--row row">
                                                <div class="news-post--col col-5 col-sm-4 col-md-5">
                                                    <div class="news-post--img">
                                                        @if (@News[i].NewsImages != null)
                                                        {
                                                            <a href="/@CMS_Core.Common.Common.GetURLDetailByNews("tin-tuc", @News[i].NewsName.ToString().ToLower(), "s" + @News[i].CateId.ToString(), "n" + @News[i].NewsId.ToString())" title="@News[i].NewsName.ToString()"><img src="@News[i].NewsImages.ToString()" alt="@News[i].NewsName.ToString()" /></a>

                                                        }


                                                    </div>
                                                </div>
                                                <div class="news-post--col col-7 col-sm-8 col-md-7">
                                                    <div class="news-post--content">
                                                        @if (@News[i].NewsName != null)
                                                        {
                                                            <h3><a href="/@CMS_Core.Common.Common.GetURLDetailByNews("tin-tuc", @News[i].NewsName.ToString().ToLower(), "s" + @News[i].CateId.ToString(), "n" + @News[i].NewsId.ToString())" title="@News[i].NewsName.ToString()">@News[i].NewsName.ToString()</a></h3>
                                                        }

                                                        <div class="news-post--info clearfix">
                                                            @if (@News[i].DateCreate != null)
                                                            {
                                                                <span class="news-post--date">Ngày @News[i].DateCreate.ToString("dd/MM/yyyy")</span>
                                                            }

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="register-form d-none d-md-block">
                                <h2>Đăng ký khám, tư vấn</h2>
                                @Html.AntiForgeryToken()
                                <div class="form">

                                    <style type="text/css">
                                        input[name='CaptchaInputText'] {
                                            width: 100% !important;
                                            line-height: 28px;
                                            background: rgba(255, 255, 255, .8) none;
                                            padding: 10px;
                                            height: 50px;
                                            display: block;
                                            width: 100%;
                                            font-size: 1rem;
                                            font-weight: 400;
                                            line-height: 1.5;
                                            color: #495057;
                                            border: 1px solid #ced4da;
                                            border-radius: .25rem;
                                            transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
                                        }
                                    </style>

                                    <div class="form-group register-name">
                                        <label>Họ và tên <i>(*)</i></label>
                                        <input value="" name="txthoten" class="form-control" type="text" />
                                    </div>
                                    <div class="form-group register-phone">
                                        <label>Số điện thoại <i>(*)</i></label>
                                        <input value="" name="txtsdt" class="form-control" type="text" />
                                    </div>
                                    <div class="form-group register-email">
                                        <label>Email</label>
                                        <input value="" name="txtemail" class="form-control" type="email" />
                                    </div>
                                    <div class="form-group register-comment">
                                        <label>Ghi chú khác</label>
                                        <textarea class="form-control" name="txtGhichu" placeholder="Nhu cầu khám của bạn là gì? (không bắt buộc)"></textarea>
                                    </div>


                                    <div class="form-group form-group--btn">
                                        <button type="submit" name="submit" value="SaveDK">ĐĂNG KÝ</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>


            <h3 class="main-title"><a href="https://medlatec.vn/DMbenhvien.pdf">Giá thuốc Medlatec</a></h3>

             


            <div class="container" style="margin:25px 0 25px;">
                @if (ViewBag.check == "0")
                {

                }
                else
                {
                    @Html.Raw(Common.buildUrlbanggia("https://medlatec.vn/bang-gia-dich-vu", page, Total[0].Total, 20))
                }



            </div>
            @*<div class="price-service--more"><a href="#">Xem thêm dịch vụ</a></div>*@
        </div>
    }
    <div class="news-main container news-schedule">
        <h2 class="main-title">Tin tức mới</h2>
        <div class="news-list">
            <div class="news-list--row row">
                @if (@News.Count > 0)
                {

                    for (int i = 0; i < 4; i++)
                    {
                        <div class="news-list--col col-lg-6">
                            <div class="news-item row">
                                <div class="news-col col-6">
                                    <div class="news-item--img">
                                        @*<a href="News/NewsDetails?cateid=@News[i].CateId.ToString()&newsid=@News[i].NewsId.ToString()" title=""><img src="@News[i].NewsImages.ToString()" alt="@News[i].NewsName.ToString()" /></a>*@

                                        <a href="/@CMS_Core.Common.Common.GetURLDetailByNews("tin-tuc",News[i].NewsName.ToString().ToLower(),"s"+ @News[i].CateId.ToString() , "n"+@News[i].NewsId.ToString())" title="@News[i].NewsName.ToString()"><img src="@News[i].NewsImages.ToString()" alt="@News[i].NewsName.ToString()" /></a>
                                    </div>
                                </div>
                                <div class="news-col col-6">
                                    <div class="news-content">
                                        <h3 class="news-title"> <a href="/@CMS_Core.Common.Common.GetURLDetailByNews("tin-tuc",News[i].NewsName.ToString().ToLower(),"s"+@News[i].CateId.ToString(),"n"+@News[i].NewsId.ToString())" title="@News[i].NewsName.ToString()">@News[i].NewsName.ToString()</a></h3>
                                        <div class="new-desc d-none d-xl-block">@News[i].NewsDescription.ToString()</div>
                                        <div class="news-date"><i class="news-calendar"></i>Ngày @News[i].DateCreate.ToString("dd/MM/yyyy")   </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }


            </div>
        </div>

        <div class="news-more">
            <a href="https://medlatec.vn/tin-tuc/y-khoa-medlatec-s28">Xem tất cả</a>
        </div>
    </div>


}


<script src="/Content/js/select2.js"></script>

<!-- Theme Base, Components and Settings -->
<script src="/Content/js/theme.js"></script>

<!-- Theme Custom -->
<script src="/Content/js/theme.custom.js"></script>

<!-- Theme Initialization Files -->
<script src="/Content/js/theme.init.js"></script>


