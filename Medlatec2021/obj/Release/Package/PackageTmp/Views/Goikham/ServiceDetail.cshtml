   @using (Html.BeginForm("NewsDetails", "News", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
   {


<div class="breadcrumb-container container">
    <ul class="clearfix" itemscope itemtype="http://schema.org/BreadcrumbList">
        <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
            <a href="https://medlatec.vn/" itemprop="item"><span itemprop="name">Trang chủ</span></a>
            <meta itemprop="position" content="1" />
        </li>
        <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
            <a href="#" itemprop="item"><span itemprop="name">Gói khám...</span></a>
            <meta itemprop="position" content="2" />
        </li>

        <li><span>@Service[0].Service.ServiceName.ToString().TrimStart().TrimEnd()</span></li>
    </ul>
</div>

<div class="single-news container">
    <div class="single-news--row row">
        <div class="single-news--col col-12 col-lg-8">
            <div class="single-news--container">
                <h1>@Html.Raw(CMS_Core.Common.Common.removeCharEncode(Service[0].Service.ServiceName.ToString().TrimStart().TrimEnd()))</h1>

                <div class="single-news--wrapper">
                    <div class="share-social clearfix">
                        <a href="https://www.facebook.com/BenhVienDaKhoaMedlatec/" class="share-social--facebook"><img src="/Content/images/facebook-share.png" alt="" /></a>
                        <a href="https://www.youtube.com/channel/UCOMskN2D_vfshrGgpL-o55Q" class="share-social--youtube"><img src="/Content/images/youtube-share.png" alt="" /></a>
                        <a href="" class="share-social--linkin"><img src="/Content/images/linkedin-share.png" alt="" /></a>
                        <a href="" class="share-social--twitter"><img src="/Content/images/twitter-share.png" alt="" /></a>

                    </div>
                    <div class="single-news--content-img">
                        @if (@Service[0].Service.Img != null)
                        {
                            string abc = "http://imgservice.icnm.vn/iCNMImage/ServiceImage/" + Service[0].Service.ServiceID + "/" + Service[0].Service.Img.ToString();
                            abc = abc.Replace("\"", "/");
                            abc = abc.Replace("\\", "/");
                            <img class="img-1 embed-responsive" src="@abc" alt="" />
                        }
                        @{
                            float tien = float.Parse(@Service[0].Service.Cost.ToString()) * 1000;
                            float giamgia = float.Parse(@Service[0].Service.Discount.ToString()) * 1000;
                            float tile = (giamgia - tien) / tien;
                            float tontile = tile * 100 * -1;
                            <div class="row" style="margin-top:15px;">
                                <div class="col-12 col-lg-6" style="text-align:right;">
                                    <b style="color: red;font-size:26px;font-weight:700;color:#c63829;display:inline-block;margin-right:8px;padding-top:10px;">Giá sau ưu đãi : @String.Format("{0:#,##0.#}", giamgia).Replace(",", ".")đ</b>
                                </div>
                                <div class="col-12 col-lg-6" style="text-align:left;">
                                    <label style="font-size:18px;color:#666;text-decoration:line-through;display:inline-block;margin-right:5px;padding-top:15px;">Nguyên gốc:  @String.Format("{0:#,##0.#}", tien).Replace(",", ".") đ </label><span style="display:inline-block;color:#fff;font-size:23px;font-weight:700;line-height:20px;padding:15px;border-radius:2px;background-color:#c63829;vertical-align:top;float: right;">Giảm @String.Format("{0:#,##}", tontile).Replace(",", ".")%</span>
                                </div>
                                </div>
                            
                        }

                    </div>
                    <div class="single-news--content">

                        @if (Service[0].Service.ServiceDes != null)
                        {

                            <p> @Service[0].Service.ServiceDes.ToString().TrimStart().TrimEnd().Replace("\"", "")</p>


                        }
                        <p>
                            <b>Danh mục các xét nghiệm trong gói khám</b>

                        </p>
                    </div>
                    @if (@Service[0].Service.ServiceDetails != null)
                    {
                        <div class="return-table--container">
                            <table class="return-table table table-bordered">
                                <thead>
                                    <tr>
                                        <th class="return-col--2">STT</th>
                                        <th class="return-col--1">Tên xét nghiệm</th>
                                        <th class="return-col--4">Giá</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Service[0].Service.ServiceDetails.Count; i++)
                                    {
                                        <tr>
                                            <td class="return-col--2">@i</td>
                                            <td class="return-col--1">@Service[0].Service.ServiceDetails[i].TestName.ToString()</td>
                                            <td class="return-col--4">@Service[0].Service.ServiceDetails[i].Price.ToString()</td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    }

                </div>

            </div>


            <div class="xntn-main" id="coso" style="padding-bottom:0px;padding-top:45px;">

               
                <div class="banner-feature--row row">
                    @Html.AntiForgeryToken()
                 

                    <div class="banner-feature--col col-xl-12" style="background:transparent;background-image:url(/Content/images/Landing-covid/fixing-05.png);background-size: cover;">

                        <div class="feature-main" style="width:100%;background:transparent;background-image:url(/Content/images/Landing-covid/fixing-07.png);background-size: cover;padding:18%;border:none;background-repeat:round;">
