                                        <input placeholder="Số điện thoại (Bắt buộc)" name="txtsdt" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="feature-col col-12 col-lg-12">
                                    <div class="form-group">
                                        <input placeholder="Địa chỉ" name="txtDiachi" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="feature-col col-12 col-lg-12">
                                    <div class="form-group schedule-birthday">

                                        <input name="txtngaysinh" class="form-control schedule-date" readonly="true" placeholder="Ngày hẹn khám" type="text" />
                                    </div>
                                </div>

                                <div class="feature-col col-12 col-lg-12">
